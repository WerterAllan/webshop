@using WebShop.Extensions
@model IEnumerable<WebShop.ViewModels.CatalogBookViewModel>
@{
    ViewBag.Title = "Home Page";
}

@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h2>todo: Most popular books</h2>
            </hgroup>
        </div>
    </section>
}

<div id="content-container">
    @foreach (var book in Model)
    {
        <div class="bookSmall">
            <div>
                @Html.ImageActionLink(book.Thumb, "Details", "Books", new RouteValueDictionary(new { id = book.Id }))
                <div>
                    @Html.ActionLink(book.Title, "Details", "Catalog", new RouteValueDictionary(new { id = book.Id }), null)
                </div>
            </div>
        </div>
    }
</div>
