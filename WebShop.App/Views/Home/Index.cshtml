@using WebShop.Extensions
@model IEnumerable<WebShop.ViewModels.CatalogBookViewModel>
@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h2>todo: Most popular books</h2>
            </hgroup>
        </div>
    </section>
}
<style type="text/css">
    .bookSmall
    {
        display: inline-block;
        width: 150px;
        padding-bottom: 12px;
    }
</style>

<div>
    @foreach( var book in Model )
    {
        <div class="bookSmall">
            <div>
                @Html.ImageActionLink( book.Thumb, "Details", "Books", new RouteValueDictionary( new { id = book.Id } ) )
                <div>
                    @Html.ActionLink( book.Title, "Details", "Books", new RouteValueDictionary( new { id = book.Id } ), null )
                </div>
            </div>
        </div>
    }
</div>
